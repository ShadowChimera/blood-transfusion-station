@import 'variables/_index.scss';

*,
*:after,
*:before {
    box-sizing: border-box;
}

body {
    margin: 0;
    padding: 1em;

    font-family: $f-family-primary;
    font-size: $f-size-primary;
    font-weight: 400;
    line-height: $f-height-primary;
    color: $f-color-primary;
}

h1 {
    margin: 0;
    font-size: $f-size-header-1;
    line-height: $f-height-header-1;
}

h2 {
    margin: 0;
    font-size: $f-size-header-2;
    line-height: $f-height-header-2;
}

h3 {
    margin: 0;
    font-size: $f-size-header-3;
    line-height: $f-height-header-3;
}

h4 {
    margin: 0;
    font-size: $f-size-header-4;
    line-height: $f-height-header-4;
}

h5 {
    margin: 0;
    font-size: $f-size-header-5;
    line-height: $f-height-header-5;
}



// * Containers *
.container {
    width: fit-content;
    margin: 0 auto;
    gap: 1rem;

    &.lg {
        // max-width: 1200px;
        max-width: 75rem;
    }
    &.md {
        // max-width: 992px;
        max-width: 62rem;
    }
    &.sm {
        // max-width: 768px;
        max-width: 48rem;
    }
}



// * Main Header *
#main-header {
    width: 100%;
    margin-bottom: 1rem;

    font-size: $f-size-me-primary;

    
    #main-nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
    }

    .list {
        list-style: none;
        margin: 0;
        padding: 0;

        display: flex;
        align-items: center;
        gap: 1em;

        
        &-item {
            display: block;
        }
    }

    .link {
        display: block;
        position: relative;
        
        &,
        &:link,
        &:visited {
            color: $f-color-main-nav;
            font-weight: $f-weight-main-nav;
            text-decoration: none;
        }

        &:hover {
            color: $f-color-main-nav-hover;
            font-weight: $f-weight-main-nav-hover;
            text-decoration: underline;
        }
        
        &:active {
            color: $f-color-main-nav-active-primary;
            font-weight: $f-weight-main-nav-active-primary;
        }
        
        &.active {
            color: $f-color-main-nav-active-secondary;
            font-weight: $f-weight-main-nav-active-secondary;
        }
    }
}


